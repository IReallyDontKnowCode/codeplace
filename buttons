    <script>
        function changeColor() {
            document.body.style.backgroundColor =
                'rgb(' + Math.round(Math.random() * 255) +
                ',' + Math.round(Math.random() * 255) +
                ',' + Math.round(Math.random() * 255) + ')';
        }

        function playAudio() {
            const audio = new Audio();
            audio.src = "./Beethoven.mp3.mp4"; 
            audio.play();
        }

        function showImage() {
            var overlay = document.getElementById('overlay');
            overlay.style.display = 'block';
        }

        function playEffect() {
            const audio = new Audio();
            audio.src = "./videoplayback.mp4"; // adjust the path to your audio file
            audio.play();
        }

        function disappearNow() {
            var button = document.getElementById('disappearNow'); // Corrected the function name and the id
            button.style.display = 'none';
        }
    </script>
    <button style="background-color: white; width: 100px; height: auto;">Does Nothing</button>
    <button onclick="playEffect()" style="background-color: yellow; width: 100px; height: auto;">McDonald's</button>
    <button onclick="disappearNow()" id="disappearNow" style="background-color:gray; width: 100px; height: auto;">Poof</button>
